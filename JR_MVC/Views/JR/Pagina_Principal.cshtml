
@{
    ViewData["Title"] = "Pagina_Principal";
}

<div class="conatiner-fluid content-inner mt-5 py-0">
            <div class="row">
                <div class="col-md-12 col-lg-10">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card banner">
                                <div class="card-body ">
                                    <div class="row justify-content-center align-items-center banner-container">
                                        <div class="col-lg-12 banner-item">
                                            <div class="banner-text">
                                                <h1 class="fw-bold mb-4">
                                                    Hello to <span class="text-secondary"> Reading Journal!</span>
                                                </h1>
                                            </div>
                                            <div class="row">
                                             <div class="col-lg-6">
                                                     <p class="mb-4"> Ver tu meta y tu progreso </p>
                                                     <div class="d-flex justify-content-center">
                                                        @using (Html.BeginForm("ShowGoal", "Goal", FormMethod.Get, new { enctype = "multipart/form-data" }))
                                                        {
                                                           <button type="submit" id="guardar-datos" class="btn btn-primary">Ver</button>
                                                        }
                                                     </div>
                                             </div>
                                             <br />
                                             <div class="col-lg-6">
                                                   <p class="mb-4"> Ver rango de calificacion </p>
                                                  <div class="d-flex justify-content-center">
                                                      @using (Html.BeginForm("ShowCalificacion", "Calificacion", FormMethod.Get, new { enctype = "multipart/form-data" }))
                                                      {
                                                        <button type="submit" id="guardar-datos" class="btn btn-primary">Ver</button>
                                                      }
                                                  </div>
                                             </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</div>

