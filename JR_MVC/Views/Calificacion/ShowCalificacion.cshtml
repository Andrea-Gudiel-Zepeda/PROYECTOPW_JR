@model JR_DB.Calificacion;
@{
    ViewData["Title"] = "ShowCalificacion";
}

<div class="conatiner-fluid content-inner mt-5 py-0">
            <div class="row">
                <div class="col-md-12 col-lg-10">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card banner">
                                <div class="card-body ">
                                    <div class="row justify-content-center align-items-center banner-container">
                                        <div class="col-lg-12 banner-item">
                                            <div class="banner-text">
                                                <h1 class="fw-bold mb-4">
                                                     <span class="text-secondary"> RANGO DE CALIFICACION </span>
                                                </h1>
                                            </div>
                                            <h4>@ViewBag.NoCalificacion</h4>
                                            <div class="row">
                                             <p class="mb-4"> limite inferior </p>
                                             <h3> @Model.LimiteInferior</h3>
                                             <br />
                                             <p class="mb-4"> Limite Superior </p>
                                             <h3> @Model.LimiteSuperior </h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                           <div class="card banner">
                              <div class="card-body ">
                                  <div class="row justify-content-center align-items-center banner-container">
                                    <div class="col-lg-12 banner-item">
                                      <div class="row">
                                        <div class="col-lg-4 banner-item">
                                            <p class="mb-4"> Crea tu rango de calificacion </p>
                                            <div class="d-flex justify-content-center">
                                                <a asp-action="CreateCalificacion" class="btn btn-primary">Create</a>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 banner-item">
                                            <p class="mb-4"> Edita tu rango de calificacion </p>
                                            <form asp-action="EditCalificacion">
                                               <div class="d-flex justify-content-center">
                                                    <a asp-action="EditCalificacion" asp-route-id="@Model.IdCalificacion" class="btn btn-primary">Editar</a>  
                                               </div>
                                             </form>
                                        </div>
                                        <div class="col-lg-4 banner-item">
                                            <p class="mb-4"> Elimina tu rango de calificacion </p>
                                             <form asp-action="DeleteCalificacion">
                                                <div class="d-flex justify-content-center">
                                                    <a asp-action="DeleteCalificacion" asp-route-id="@Model.IdCalificacion" class="btn btn-primary">Delete</a>
                                                </div>
                                             </form>
                                        </div>
                                      </div>
                                  </div>
                              </div>
                           </div>
                           </div>
                       </div>
                    </div>
                </div>
            </div>
</div>

