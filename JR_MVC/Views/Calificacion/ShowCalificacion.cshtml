@model JR_DB.Goal;
@{
    ViewData["Title"] = "ShowGoal";
}

<div class="conatiner-fluid content-inner mt-5 py-0">
            <div class="row">
                <div class="col-md-12 col-lg-10">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card banner">
                                <div class="card-body ">
                                    <div class="row justify-content-center align-items-center banner-container">
                                        <div class="col-lg-12 banner-item">
                                            <div class="banner-text">
                                                <h1 class="fw-bold mb-4">
                                                     <span class="text-secondary"> GOAL AND PROGRESS </span>
                                                </h1>
                                            </div>
                                            <h4>@ViewBag.NoGoal</h4>
                                            <div class="row">
                                             <p class="mb-4"> Meta </p>
                                             <h3> @Model.GoalBook </h3>
                                             <br />
                                             <p class="mb-4"> Progreso </p>
                                             <h3> @Model.Progress </h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                           <div class="card banner">
                              <div class="card-body ">
                                  <div class="row justify-content-center align-items-center banner-container">
                                    <div class="col-lg-12 banner-item">
                                      <div class="row">
                                        <div class="col-lg-4 banner-item">
                                            <p class="mb-4"> Crea tu meta </p>
                                            <div class="d-flex justify-content-center">
                                                <a asp-action="CreateGoal" class="btn btn-primary">Create</a>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 banner-item">
                                            <p class="mb-4"> Edita tu meta </p>
                                            <form asp-action="EditGoal">
                                               <div class="d-flex justify-content-center">
                                                    <a asp-action="EditGoal" asp-route-id="@Model.IdGoal" class="btn btn-primary">Editar</a>  
                                               </div>
                                             </form>
                                        </div>
                                        <div class="col-lg-4 banner-item">
                                            <p class="mb-4"> Elimina tu meta </p>
                                             <form asp-action="DeleteGoal">
                                                <div class="d-flex justify-content-center">
                                                    <a asp-action="DeleteGoal" asp-route-id="@Model.IdGoal" class="btn btn-primary">Delete</a>
                                                </div>
                                             </form>
                                        </div>
                                      </div>
                                  </div>
                              </div>
                           </div>
                           </div>
                       </div>
                    </div>
                </div>
            </div>
</div>

