
<body class=" " data-bs-spy="scroll" data-bs-target="#elements-section" data-bs-offset="0" tabindex="0">

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="header-title">
                        <h4 class="card-title">Validar Datos</h4>
                    </div>
                    <div class="card-body">
                        <p>Enter your credentials for validate your information.</p>
                        <form asp-action="ValidacionCredencialesL">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="floating-label form-group text-start">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" name="email" id="email" aria-describedby="password" placeholder=" ">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="floating-label form-group text-start">
                                        <label for="password" class="form-label">Password</label>
                                        <input type="password" class="form-control" name="password" id="password" aria-describedby="password" placeholder=" ">
                                    </div>
                                </div>
                            </div>
                            <h5>@ViewBag.error</h5>

                            <div class="d-flex justify-content-center">
                                @using (Html.BeginForm("ValidacionCredencialesB", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <button type="submit" class="btn btn-primary">Validar</button>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>