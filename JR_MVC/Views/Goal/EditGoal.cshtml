@model JR_DB.Goal;
@{
    ViewData["Title"] = "EditGoal";
}


<body class=" " data-bs-spy="scroll" data-bs-target="#elements-section" data-bs-offset="0" tabindex="0">

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="header-title">
                        <h4 class="card-title">Modificar Meta</h4>
                    </div>
                    <div class="card-body">
                         <form asp-action="EditGoal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="IdGoal"/>
                            <div class="row">
                                <div class="col-md-12 col-lg-12 col-sm-12">
                                    <label asp-for="GoalBook" class="control-label"></label>
                                    <input asp-for="GoalBook" class="form-control" />
                                    <span asp-validation-for="GoalBook" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="card-footer">
                              <input type="submit" value="Grabar" class="btn btn-primary" /> 
                              <br />
                               <a asp-action="ShowGoal" class="btn btn-primary">Regresar</a>
                            </div>
                         </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>