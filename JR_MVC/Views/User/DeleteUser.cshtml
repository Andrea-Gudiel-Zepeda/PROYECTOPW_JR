@model JR_DB.User;
@{
    ViewData["Title"] = "DeleteUser";
}


<body class=" " data-bs-spy="scroll" data-bs-target="#elements-section" data-bs-offset="0" tabindex="0">

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="header-title">
                        <h4 class="card-title">Eliminar Cuenta</h4>
                    </div>
                    <div class="card-body">
                        <p class="text-danger">¿Seguro que desea eliminar la cuenta?</p>
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.FullName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.LastName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.NumberPhone)
                            </dd>
                        </dl>
                    </div>
                    <div class="card-footer">
                        <form asp-action="DeleteUser">
                            <input type="hidden" asp-for="IdUser"/>
                            <input type="hidden" asp-for="Password"/>
                            <div class="col-md-6 col-lg-6 col-sm-12">
                                <input type="submit" value="Eliminar" class="btn btn-primary" />
                            </div>
                            <br />
                            <div class="col-md-6 col-lg-6 col-sm-12">
                                <a asp-action="User_Profile" class="btn btn-primary">Regresar</a>
                            </div>
                        </form>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>