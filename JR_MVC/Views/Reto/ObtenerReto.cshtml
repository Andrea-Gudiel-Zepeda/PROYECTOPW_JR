@model JR_DB.Reto;
@{
    ViewData["Title"] = "ObtenerReto";
}

<div class="conatiner-fluid content-inner mt-5 py-0">
            <div class="row">
                <div class="col-md-12 col-lg-10">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card banner">
                                <div class="card-body ">
                                    <div class="row justify-content-center align-items-center banner-container">
                                        <div class="col-lg-12 banner-item">
                                            <div class="banner-text">
                                                <h1 class="fw-bold mb-4">
                                                     <span class="text-secondary"> RETO ALEATORIO  </span>
                                                </h1>
                                            </div>
                                            <div class="row">
                                             <p class="mb-4"> Tu reto es: </p>
                                             <dl>
                                              <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.NombreReto)
                                              </dd>
                                             </dl>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                           <div class="card banner">
                              <div class="card-body ">
                                  <div class="row justify-content-center align-items-center banner-container">
                                    <div class="col-lg-12 banner-item">
                                      <div class="row">
                                        <div class="col-lg-4 banner-item">
                                            <p class="mb-4"> Aceptar el reto </p>
                                            <form asp-action="ShowReto">
                                                <div class="d-flex justify-content-center">
                                                    <a asp-action="ShowReto" class="btn btn-primary">Aceptar</a>
                                                </div>
                                            </form>
                                        </div>
                                      </div>
                                  </div>
                              </div>
                           </div>
                           </div>
                       </div>
                    </div>
                </div>
            </div>
</div>

